<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.shipvoyage.controller.passenger.PaymentController"
      style="-fx-padding:20;">

    <Label fx:id="amountLabel" text="Amount: 0.0" style="-fx-font-size:18; -fx-font-weight:bold;"/>

    <Label text="bKash Payment" style="-fx-font-size:16; -fx-font-weight:bold;"/>

    <TextField fx:id="phoneField" promptText="bKash Phone Number"/>
    <TextField fx:id="pinField" promptText="bKash PIN"/>

    <Button text="Pay Now" onAction="#onPayBkash"
            style="-fx-font-size:16; -fx-background-color:#28a745; -fx-text-fill:white;"/>
</VBox>
