<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.shipvoyage.controller.passenger.ProfileController"
      spacing="15" alignment="TOP_CENTER" >
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Profile" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <ImageView fx:id="profileImageView" fitHeight="120" fitWidth="120" style="-fx-border-color: gray; -fx-border-width: 1;"/>
    <Button text="Change Image" onAction="#onChangeImage"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Username:" minWidth="80"/>
        <TextField fx:id="usernameField" prefWidth="250"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Email:" minWidth="80"/>
        <TextField fx:id="emailField" prefWidth="250"/>
    </HBox>

    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="editButton" text="Edit Profile" onAction="#onEditProfile"/>
        <Button fx:id="saveButton" text="Save" onAction="#onSaveProfile"/>
    </HBox>

</VBox>
