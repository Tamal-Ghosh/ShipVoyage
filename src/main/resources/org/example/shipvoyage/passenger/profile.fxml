<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.shipvoyage.controller.passenger.ProfileController"
      stylesheets="@../style.css"
      styleClass="app-container"
      spacing="30">
    
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <VBox styleClass="booking-container" spacing="30" maxWidth="600" alignment="TOP_CENTER">
        
        <Label text="My Profile" styleClass="booking-title" alignment="CENTER"/>

        <!-- Avatar Section -->
        <VBox spacing="16" alignment="CENTER">
            <!-- TODO: Add profile picture here -->
            <StackPane style="-fx-background-color: #E5E7EB; -fx-background-radius: 60;" prefWidth="120" prefHeight="120">
                <ImageView fx:id="profileImageView" fitHeight="120" fitWidth="120" preserveRatio="true"/>
                <Label text="ðŸ‘¤" style="-fx-font-size: 48px; -fx-text-fill: #9CA3AF;"/>
            </StackPane>
            <Button text="Change Photo" onAction="#onChangeImage" styleClass="ghost-button" prefWidth="140"/>
        </VBox>

        <Separator/>

        <!-- Profile Information -->
        <GridPane hgap="20" vgap="20">
            <columnConstraints>
                <ColumnConstraints percentWidth="35"/>
                <ColumnConstraints percentWidth="65"/>
            </columnConstraints>

            <Label text="Username" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   style="-fx-font-weight: 600; -fx-text-fill: #374151;"/>
            <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0"
                      styleClass="text-field" promptText="Enter username"/>

            <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="1"
                   style="-fx-font-weight: 600; -fx-text-fill: #374151;"/>
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                      styleClass="text-field" promptText="Enter email"/>

            <Label text="Member Since" GridPane.columnIndex="0" GridPane.rowIndex="2"
                   style="-fx-font-weight: 600; -fx-text-fill: #374151;"/>
            <Label text="January 2022" GridPane.columnIndex="1" GridPane.rowIndex="2"
                   style="-fx-text-fill: #6B7280;"/>

            <Label text="Total Bookings" GridPane.columnIndex="0" GridPane.rowIndex="3"
                   style="-fx-font-weight: 600; -fx-text-fill: #374151;"/>
            <Label text="5 cruises" GridPane.columnIndex="1" GridPane.rowIndex="3"
                   style="-fx-text-fill: #6B7280;"/>
        </GridPane>

        <Separator/>

        <!-- Action Buttons -->
        <HBox spacing="12" alignment="CENTER">
            <Button fx:id="editButton" text="Edit Profile" onAction="#onEditProfile" 
                    styleClass="secondary-button" prefWidth="140"/>
            <Button fx:id="saveButton" text="Save Changes" onAction="#onSaveProfile" 
                    styleClass="primary-button" prefWidth="140"/>
        </HBox>

    </VBox>

</VBox>
