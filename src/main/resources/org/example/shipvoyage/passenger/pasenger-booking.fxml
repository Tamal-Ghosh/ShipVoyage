<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.shipvoyage.controller.passenger.BookingController" style="-fx-padding:20;">

    <Label text="Select Rooms" style="-fx-font-size:18; -fx-font-weight:bold;"/>

    <GridPane fx:id="roomGrid" hgap="10" vgap="10"/>

    <HBox spacing="20" alignment="CENTER_RIGHT">
        <Label fx:id="totalLabel" text="Total: $0" style="-fx-font-size:16; -fx-font-weight:bold;"/>
        <Button fx:id="payButton" text="Pay" onAction="#pay" style="-fx-font-size:16; -fx-background-color:#2a73ff; -fx-text-fill:white;"/>
    </HBox>
</VBox>
