<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.shipvoyage.controller.passenger.UpcomingToursController"
      spacing="16"
      stylesheets="@../style.css"
      styleClass="app-container"
            style="-fx-background-color: transparent;">
        <padding>
                <Insets top="16" right="20" bottom="20" left="20" />
        </padding>
    <Label text="All Upcoming Trips" styleClass="section-title" style="-fx-font-size: 24px;"/>
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" hbarPolicy="NEVER">
        <VBox fx:id="upcomingListContainer" spacing="14">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
        </VBox>
    </ScrollPane>
</VBox>
