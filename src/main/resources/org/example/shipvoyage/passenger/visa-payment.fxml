<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.shipvoyage.controller.passenger.PaymentController"
      style="-fx-padding:20;">

    <Label fx:id="amountLabel" text="Amount: 0.0" style="-fx-font-size:18; -fx-font-weight:bold;"/>

    <Label text="Visa Card Payment" style="-fx-font-size:16; -fx-font-weight:bold;"/>

    <TextField fx:id="cardNumberField" promptText="Card Number" />
    <TextField fx:id="cardHolderField" promptText="Card Holder Name"/>
    <TextField fx:id="expiryField" promptText="Expiry Date (MM/YY)"/>
    <TextField fx:id="cvvField" promptText="CVV"/>

    <Button text="Pay Now" onAction="#onPayVisa"
            style="-fx-font-size:16; -fx-background-color:#2a73ff; -fx-text-fill:white;"/>
</VBox>
