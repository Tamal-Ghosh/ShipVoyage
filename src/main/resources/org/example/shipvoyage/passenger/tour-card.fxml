<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.shipvoyage.controller.passenger.TourCardController"
      spacing="10"
      style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);">

    <GridPane hgap="10" vgap="5">
        <Label text="Tour:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="tourName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Ship:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="shipName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="From:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="from" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="To:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="to" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Duration:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Label fx:id="duration" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Start:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <Label fx:id="startDate" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="End:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <Label fx:id="endDate" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    </GridPane>

    <Button fx:id="bookButton" text="Book" style="-fx-background-color: #2e8b57; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15 8 15;" />
</VBox>
