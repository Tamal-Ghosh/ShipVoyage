<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.shipvoyage.controller.passenger.TourCardController"
      stylesheets="@../style.css"
      styleClass="tour-card"
      spacing="14">

    <HBox alignment="CENTER_LEFT" spacing="12">
        <VBox HBox.hgrow="ALWAYS" spacing="8">
            <Label fx:id="tourName" styleClass="tour-title"/>
            <Label fx:id="shipName" style="-fx-text-fill: #6B7280; -fx-font-size: 14px;"/>
        </VBox>
        <Label fx:id="priceLabel" text="$0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A;"/>
    </HBox>

    <Separator/>

    <GridPane hgap="20" vgap="8">
        <columnConstraints>
            <ColumnConstraints percentWidth="50"/>
            <ColumnConstraints percentWidth="50"/>
        </columnConstraints>

        <VBox spacing="4" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Label text="Route" styleClass="tour-detail-label"/>
            <HBox spacing="8">
                <Label fx:id="from" styleClass="tour-detail-value"/>
                <Label text="â†’" style="-fx-text-fill: #2563B5;"/>
                <Label fx:id="to" styleClass="tour-detail-value"/>
            </HBox>
        </VBox>

        <VBox spacing="4" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Label text="Duration" styleClass="tour-detail-label"/>
            <Label fx:id="duration" styleClass="tour-detail-value"/>
        </VBox>

        <VBox spacing="4" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <Label text="Departure" styleClass="tour-detail-label"/>
            <Label fx:id="startDate" styleClass="tour-detail-value"/>
        </VBox>

        <VBox spacing="4" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Label text="Return" styleClass="tour-detail-label"/>
            <Label fx:id="endDate" styleClass="tour-detail-value"/>
        </VBox>
    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="12">
        <Button text="View Details" styleClass="ghost-button" prefWidth="120"/>
        <Button fx:id="bookButton" text="Book Now" styleClass="primary-button" prefWidth="120"/>
    </HBox>

</VBox>
