<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/25"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="org.example.shipvoyage.controller.passenger.SupportController"
       spacing="30"
       alignment="TOP_CENTER"
       styleClass="mytrips-section"
       stylesheets="@../style.css"
       minHeight="700"
       prefHeight="700">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <VBox styleClass="booking-container" spacing="24" maxWidth="600" alignment="TOP_CENTER">
        <Label text="Support" styleClass="booking-title" alignment="CENTER"/>
        <Label text="We're here to help with your bookings." style="-fx-text-fill: #6B7280; -fx-font-size: 14px;" alignment="CENTER"/>

        <Separator/>

        <GridPane hgap="20" vgap="20">
            <columnConstraints>
                <ColumnConstraints percentWidth="30"/>
                <ColumnConstraints percentWidth="70"/>
            </columnConstraints>

            <Label text="Phone" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   style="-fx-font-weight: 600; -fx-text-fill: #374151;"/>
            <Label text="+880-1234-567890" GridPane.columnIndex="1" GridPane.rowIndex="0"
                   style="-fx-text-fill: #6B7280;"/>

            <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="1"
                   style="-fx-font-weight: 600; -fx-text-fill: #374151;"/>
            <Label text="support@shipvoyage.com" GridPane.columnIndex="1" GridPane.rowIndex="1"
                   style="-fx-text-fill: #6B7280;"/>

            <Label text="Hours" GridPane.columnIndex="0" GridPane.rowIndex="2"
                   style="-fx-font-weight: 600; -fx-text-fill: #374151;"/>
            <Label text="24/7 for urgent travel issues; 09:00-18:00 local time for general inquiries." 
                   GridPane.columnIndex="1" GridPane.rowIndex="2"
                   style="-fx-text-fill: #6B7280;" wrapText="true"/>

            <Label text="FAQ" GridPane.columnIndex="0" GridPane.rowIndex="3"
                   style="-fx-font-weight: 600; -fx-text-fill: #374151;"/>
            <Label text="Visit our FAQ in the app to find quick answers on payments, bookings, and cancellations." 
                   GridPane.columnIndex="1" GridPane.rowIndex="3"
                   style="-fx-text-fill: #6B7280;" wrapText="true"/>
        </GridPane>
    </VBox>

</VBox>
