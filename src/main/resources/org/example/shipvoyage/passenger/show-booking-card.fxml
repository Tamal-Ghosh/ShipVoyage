<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.shipvoyage.controller.passenger.BookingCardController"
      spacing="8"
      style="-fx-border-color: gray; -fx-border-radius:8; -fx-padding:12;">

    <Label fx:id="tourName" style="-fx-font-size:16; -fx-font-weight:bold"/>

    <HBox spacing="10">
        <Label text="From:"/>
        <Label fx:id="from"/>
        <Label text="To:"/>
        <Label fx:id="to"/>
    </HBox>

    <Label fx:id="dates"/>
    <Label fx:id="rooms"/>

    <Button fx:id="cancelButton" text="Cancel Booking"/>
</VBox>