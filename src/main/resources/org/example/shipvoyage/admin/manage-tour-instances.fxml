<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.shipvoyage.controller.admin.ManageTourInstancesController" stylesheets="@../style.css">

    <center>
        <VBox spacing="15" styleClass="mytrips-section">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="Manage Tour Instances"/>

            <HBox spacing="12" alignment="CENTER_RIGHT">
                <TextField promptText="Search by tour or date" prefWidth="280"/>
                <Button text="Search" styleClass="search-button"/>
            </HBox>

            <TableView fx:id="instanceTable" VBox.vgrow="ALWAYS" style="-fx-text-fill: black;">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="60" text="ID" style="-fx-text-fill: black;" />
                    <TableColumn fx:id="tourIdColumn" prefWidth="200" text="Tour" style="-fx-text-fill: black;" />
                    <TableColumn fx:id="shipIdColumn" prefWidth="200" text="Ship" style="-fx-text-fill: black;" />
                    <TableColumn fx:id="startDateColumn" prefWidth="150" text="Start Date" style="-fx-text-fill: black;" />
                    <TableColumn fx:id="endDateColumn" prefWidth="150" text="End Date" style="-fx-text-fill: black;" />
                    <TableColumn fx:id="actionColumn" prefWidth="160" text="Actions" style="-fx-text-fill: black;" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="8">
            <padding>
                <Insets bottom="20" left="20" right="20" top="15" />
            </padding>

            <GridPane hgap="15" vgap="6">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                </columnConstraints>

                <Label text="Tour:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <ComboBox fx:id="tourComboBox" promptText="Select Tour" GridPane.columnIndex="0" GridPane.rowIndex="1" HBox.hgrow="ALWAYS"/>
                <Label text="Ship:" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <ComboBox fx:id="shipComboBox" promptText="Select Ship" GridPane.columnIndex="1" GridPane.rowIndex="1" HBox.hgrow="ALWAYS"/>
                <Label text="Start Date:" style="-fx-font-weight: bold;" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <DatePicker fx:id="startDatePicker" promptText="Start Date" GridPane.columnIndex="2" GridPane.rowIndex="1" HBox.hgrow="ALWAYS"/>
                <Label text="End Date:" style="-fx-font-weight: bold;" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                <DatePicker fx:id="endDatePicker" promptText="End Date" GridPane.columnIndex="3" GridPane.rowIndex="1" HBox.hgrow="ALWAYS"/>
            </GridPane>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button fx:id="saveButton" onAction="#onSaveInstance" style="-fx-font-weight: bold; -fx-pref-width: 100; -fx-background-color: #4cd137; -fx-text-fill: white;" text="Save"/>
                <Button fx:id="clearButton" onAction="#onClearForm" style="-fx-font-weight: bold; -fx-pref-width: 100; -fx-background-color: #dcdde1; -fx-text-fill: #2f3640;" text="Clear"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
