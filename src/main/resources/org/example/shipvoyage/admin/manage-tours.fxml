<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.shipvoyage.controller.admin.ManageToursController">

    <top>
        <Label text="Manage Tours"
               style="-fx-font-size: 24px;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <TableView fx:id="tourTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="nameColumn" text="Tour Name" prefWidth="200"/>
                    <TableColumn fx:id="routeColumn" text="Route" prefWidth="200"/>
                    <TableColumn fx:id="durationColumn" text="Duration (Days)" prefWidth="120"/>
                    <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200"/>
                    <TableColumn fx:id="actionColumn" text="Actions" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="20" bottom="20" left="20"/>
            </padding>

            <HBox spacing="10">
                <TextField fx:id="nameField" promptText="Tour Name" HBox.hgrow="ALWAYS"/>
                <TextField fx:id="routeField" promptText="Route (e.g. Dhaka → Cox’s Bazar)" HBox.hgrow="ALWAYS"/>
                <TextField fx:id="durationField" promptText="Duration (Days)" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox spacing="10">
                <TextField fx:id="descriptionField" promptText="Description" HBox.hgrow="ALWAYS"/>
            </HBox>

            <HBox spacing="10">
                <Button fx:id="saveButton"
                        text="Save"
                        onAction="#onSaveTour"
                        HBox.hgrow="ALWAYS"/>
                <Button fx:id="clearButton"
                        text="Clear"
                        onAction="#onClearForm"
                        HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
