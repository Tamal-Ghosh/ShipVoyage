<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.shipvoyage.controller.admin.DashboardController"
            prefWidth="1200.0" prefHeight="700.0" style="-fx-background-color: #f4f6f8;">

    <left>
        <VBox spacing="15" style="-fx-background-color: #2c3e50;" prefWidth="220">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="ADMIN PANEL" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" maxWidth="Infinity"/>
            <Button text="Manage Ships" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px;" maxWidth="Infinity"/>
            <Button text="Manage Tours" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px;" maxWidth="Infinity"/>
            <Button text="Manage Tour Instances" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px;" maxWidth="Infinity"/>
            <Button text="Manage Rooms" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px;" maxWidth="Infinity"/>
            <Button text="View Bookings" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px;" maxWidth="Infinity"/>
            <Label text="Logged in as Admin" style="-fx-text-fill: white; -fx-font-size: 12px;" maxWidth="Infinity"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="30">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <GridPane hgap="20" vgap="20">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>

                <HBox alignment="CENTER" style="-fx-background-color: #1abc9c; -fx-padding: 20; -fx-background-radius: 10;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <VBox alignment="CENTER">
                        <Label text="Total Ships" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                        <Label fx:id="lblTotalShips" text="0" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>
                        <Button text="View All Ships" style="-fx-background-color: #16a085; -fx-text-fill: white;"/>
                    </VBox>
                </HBox>

                <HBox alignment="CENTER" style="-fx-background-color: #3498db; -fx-padding: 20; -fx-background-radius: 10;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <VBox alignment="CENTER">
                        <Label text="Total Tours" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                        <Label fx:id="lblTotalTours" text="0" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>
                        <Button text="View All Tours" style="-fx-background-color: #2980b9; -fx-text-fill: white;"/>
                    </VBox>
                </HBox>

                <HBox alignment="CENTER" style="-fx-background-color: #e67e22; -fx-padding: 20; -fx-background-radius: 10;" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <VBox alignment="CENTER">
                        <Label text="Total Tour Instances" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                        <Label fx:id="lblTourInstances" text="0" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>
                        <Button text="View Instances" style="-fx-background-color: #d35400; -fx-text-fill: white;"/>
                    </VBox>
                </HBox>

                <HBox alignment="CENTER" style="-fx-background-color: #9b59b6; -fx-padding: 20; -fx-background-radius: 10;" GridPane.columnIndex="3" GridPane.rowIndex="0">
                    <VBox alignment="CENTER">
                        <Label text="Total Rooms" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                        <Label fx:id="lblTotalRooms" text="0" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>
                        <Button text="View Rooms" style="-fx-background-color: #8e44ad; -fx-text-fill: white;"/>
                    </VBox>
                </HBox>

            </GridPane>
        </VBox>
    </center>

</BorderPane>
