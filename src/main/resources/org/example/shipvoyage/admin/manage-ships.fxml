<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.shipvoyage.controller.admin.ManageShipsController">

    <top>
        <Label text="Manage Ships"
               style="-fx-font-size: 24px;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <TableView fx:id="shipTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="nameColumn" text="Ship Name" prefWidth="200"/>
                    <TableColumn fx:id="capacityColumn" text="Capacity" prefWidth="100"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="20" bottom="20" left="20"/>
            </padding>

            <HBox spacing="10">
                <TextField fx:id="nameField"
                           promptText="Ship Name"
                           HBox.hgrow="ALWAYS"/>
                <TextField fx:id="capacityField"
                           promptText="Capacity"
                           HBox.hgrow="ALWAYS"/>
            </HBox>

            <HBox spacing="10">
                <Button fx:id="saveButton"
                        text="Save"
                        onAction="#OnShipSaveClicked"
                        HBox.hgrow="ALWAYS"/>
                <Button fx:id="cancelButton"
                        text="Cancel"
                        onAction="#OnShipCancelClicked"
                        HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
