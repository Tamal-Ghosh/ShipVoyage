<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.shipvoyage.controller.admin.ViewBookingsController" stylesheets="@../style.css">

    <center>
        <VBox spacing="15" styleClass="mytrips-section">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="View Bookings"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Tour Instance" style="-fx-text-fill: white; -fx-font-weight: 600;"/>
                <ComboBox fx:id="tourInstanceComboBox" HBox.hgrow="ALWAYS"/>
            </HBox>

            <TableView fx:id="bookingTable" VBox.vgrow="ALWAYS" style="-fx-text-fill: black;">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="60" style="-fx-text-fill: black;"/>
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" style="-fx-text-fill: black;"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="200" style="-fx-text-fill: black;"/>
                    <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="140" style="-fx-text-fill: black;"/>
                    <TableColumn fx:id="roomColumn" text="Rooms" prefWidth="120" style="-fx-text-fill: black;"/>
                    <TableColumn fx:id="totalPaymentColumn" text="Total" prefWidth="100" style="-fx-text-fill: black;"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" style="-fx-text-fill: black;"/>
                    <TableColumn fx:id="actionColumn" text="Action" prefWidth="120" style="-fx-text-fill: black;"/>
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>
