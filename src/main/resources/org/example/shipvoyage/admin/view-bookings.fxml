<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.shipvoyage.controller.admin.ViewBookingsController">

    <top>
        <Label text="View Bookings"
               style="-fx-font-size: 24px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <HBox spacing="10">
                <Label text="Select Tour Instance:"/>
                <ComboBox fx:id="tourInstanceComboBox" promptText="None" HBox.hgrow="ALWAYS"/>

            </HBox>

            <BorderPane style="-fx-border-color: #dfe6e9;
                               -fx-border-width: 1.5;
                               -fx-border-radius: 8;
                               -fx-background-radius: 8;
                               -fx-padding: 8;">
                <center>
                    <TableView fx:id="bookingTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                            <TableColumn fx:id="nameColumn" text="Customer Name" prefWidth="150"/>
                            <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
                            <TableColumn fx:id="tourDateColumn" text="Tour Date" prefWidth="120"/>
                            <TableColumn fx:id="roomColumn" text="Room Number" prefWidth="100"/>
                            <TableColumn fx:id="totalPaymentColumn" text="Total Payment" prefWidth="100"/>
                            <TableColumn fx:id="duePaymentColumn" text="Due Payment" prefWidth="100"/>
                            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                            <TableColumn fx:id="actionColumn" text="Actions" prefWidth="150"/>
                        </columns>
                    </TableView>
                </center>
            </BorderPane>

        </VBox>
    </center>

</BorderPane>
