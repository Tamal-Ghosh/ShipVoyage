<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.shipvoyage.controller.UserTypeController"
      alignment="CENTER"
      spacing="42"
      prefWidth="600"
      prefHeight="400"
      stylesheets="@style.css"
      styleClass="root">

    <children>

        <VBox alignment="CENTER"
              spacing="10"
              styleClass="card">
            <children>
                <Label text="Welcome to Ship Voyage" styleClass="title"/>
                <Label text="Choose your login type" styleClass="subtitle"/>
            </children>
        </VBox>

        <Button fx:id="adminLogin"
                text="Admin Login"
                onAction="#onAdminClick"
                prefWidth="270"
                prefHeight="54"
                styleClass="primary-button"/>

        <Button fx:id="passengerLogin"
                text="Passenger Login"
                onAction="#onPassengerClick"
                prefWidth="270"
                prefHeight="54"
                styleClass="secondary-button"/>

    </children>

    <padding>
        <Insets top="45" bottom="45" left="45" right="45"/>
    </padding>

</VBox>
